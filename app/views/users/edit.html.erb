<h1> Create a new user </h1>

<%= form_for @user do |f| %>
	<p>
		<%= f.label :username %>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :password %>
		<%= f.text_field :pword %>
	</p>

	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>

	<p>
		<%= f.submit "Update" %>
	</p>

<% end %>